{
  "presets": [
    "@babel/react",
    "@babel/typescript"
    // ["@babel/env", { "modules": false }]
  ],
  // 通过 babel-plugin-import 插件完成按需加载
  "plugins": [
    [
      "import",
      {
        "libraryName": "antd",
        "libraryDirectory": "lib",
        "style": "css" // `style: true` 会加载 less 文件
      },
      "antd"
    ],
    [
      "import",
      {
        "libraryName": "lodash",
        "libraryDirectory": "",
        "camel2DashComponentName": false // default: true
      },
      "lodash"
    ],
    [
      "import",
      {
        "libraryName": "moment",
        "libraryDirectory": "",
        "camel2DashComponentName": false // default: true
      },
      "moment"
    ]
  ]
}
