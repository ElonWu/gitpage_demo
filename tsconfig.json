{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    // 配合 webpack alias
    "paths": {
      "components/*": ["src/components/*"],
      "views/*": ["src/views/*"],
      "styles/*": ["src/styles/*"],
      "routes/*": ["src/routes/*"],
      "api/*": ["src/api/*"],
      "models/*": ["src/models/*"],
      "assets/*": ["src/assets/*"]
    },
    "outDir": "/dist",
    "module": "commonjs", // 使用 babel 来解析 ts 时只能几首 commonjs
    "target": "es5",
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": ["./src/**/*", "./typings/*"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
